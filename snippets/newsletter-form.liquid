<!-- /snippets/newsletter-form.liquid -->
{% if settings.newsletter_enable %}

{% form 'customer' %}
<div id="newsletter-form">
	<div class="container">
		<div class="row">
			<div class="col-md-6">
				<h2>{{settings.newsletter-title}}</h2>
				<h3>{{settings.newsletter-subtitle}}</h3>
			</div>
			<div class="col-md-6">

				{% if form.posted_successfully? %}
				<p><em>{{ 'general.newsletter_form.subscribed' }}</em></p>
				{% elsif form.errors %}
				{% for field in form.errors %}
				<p><em>{{ field }} - {{ form.errors.messages[field] }}</em></p>
				{% endfor %}
				{% endif %}

				<input type="hidden" name="contact[accepts_marketing]" value="true">
				<div class="form-group newsletter-form">
					<input type="email" placeholder=" |  Please enter your email" id="mail" class="form-control" aria-label="{{ 'general.newsletter_form.newsletter_email' | t }}" autocorrect="off" autocapitalize="off" name="contact[email]" />
					<button type="submit" class="btn uppercase" name="subscribe" id="subscribe" value="Subscribe">Subscribe</button>
					
				</div>
			</div>
		</div>
	</div>
</div>
{% endform %}

{% endif %}
