/*================ Color Variables ================*/
$color-primary: {{ settings.color_primary }};

// Text colors
$color-body-text: {{ settings.color_body_text }};
$color-top-header-text:{{ settings.top-header-text-color }};

// Backgrounds
$default-color: #fff;
$color-body:{{ settings.body-bkg-color }};
$color-top-header: {{ settings.top-header-bkg-color }};
$color-header: {{ settings.header-bkg-color }};
$color-footer: {{ settings.footer-bkg-color }};
$color-copyright-footer: {{ settings.footer-copyright-bkg }};
$color-copyright-text: {{ settings.footer-copyright-text }};
// Border colors
$color-border: {{ settings.border-color }};

// Button colors
$color-button: {{ settings.button-color }};
$color-text-btn: {{ settings.button-text-color }};

// Helper colors for form error states
$color-disabled: #000;
$color-disabled-border: #000;
$color-error: #000;
$color-error-bg: #000;
$color-success: #000;
$color-success-bg: #000;

/*================ Typography Variables ================*/
$font-weight-normal: 400;
$font-weight-bold: 700;

$font-stack-header: 'HelveticaNeue', 'Helvetica Neue', Helvetica, Arial, sans-serif;
$font-weight-header: $font-weight-bold;

$font-stack-body: 'HelveticaNeue', 'Helvetica Neue', Helvetica, Arial, sans-serif;
$font-size-base: {{ settings.type_base_size }};

