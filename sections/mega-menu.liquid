{% javascript %}
$(".dropdown").hover(            
function() {
$('.dropdown-menu-open', this).not('.in .dropdown-menu').stop(true,true).slideDown("400");
$(this).toggleClass('open');        
},
function() {
$('.dropdown-menu-open', this).not('.in .dropdown-menu').stop(true,true).slideUp("400");
$(this).toggleClass('open');       
}
);
